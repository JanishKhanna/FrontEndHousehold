@model CreateEditBankAccountViewModel

@{
    ViewBag.Title = "CreateAccount";
}

<h2>Create Account</h2>

<form action="@Url.Action("CreateAccount", "BankAccount")" method="post" enctype="multipart/form-data" style="margin-top:50px">

    @Html.ValidationSummary(false)
    <div class="form-group">
        @Html.LabelFor(p => p.Name, "Name")
        @Html.TextBoxFor(p => p.Name, new { @class = "form-control", placeholder = "Name" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Description, "Description")
        @Html.TextAreaFor(p => p.Description, new { @class = "form-control", placeholder = "Description", rows = 5, columns = 5 })

        <div class="">
            <button type="submit" class="btn btn-default">Create</button>
        </div>
    </div>
</form>