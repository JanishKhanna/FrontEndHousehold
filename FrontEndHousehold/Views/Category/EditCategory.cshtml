@model CreateEditCategoryViewModel

@{
    ViewBag.Title = "EditCategory";
}

<h2 style="margin-top:15px">Edit Category</h2>

<form action="@Url.Action("EditCategory", "Category")" method="post" enctype="multipart/form-data" style="margin-top:50px">
    @Html.ValidationSummary(false)

    <div class="form-group">
        @Html.LabelFor(p => p.Name, "Name")
        @Html.TextBoxFor(p => p.Name, new { @class = "form-control", placeholder = "Name" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Description, "Description")
        @Html.TextAreaFor(p => p.Description, new { @class = "form-control", placeholder = "Description", rows = 5, columns = 5 })

        <div class="">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>

