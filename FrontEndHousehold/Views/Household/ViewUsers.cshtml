<h2>Users of this Household</h2>

@if (!Model.Any())
{
    <div style="margin-top:15px;">
        <p><strong>No User is Joined to this Household</strong></p>
    </div>
}
else
{
    <table id="sample-datatables" class="table table-striped">
        <thead>
            <tr>
                <th>Users</th> 
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td> 
                    <td>
                        <form method="delete" action="@Url.Action("LeaveHousehold", "Household", new { email = user.Email, id = user.HouseholdId })">
                            <button class="btn-delete fas fa-remove">Leave</button>
                        </form>
                    </td>
                </tr>                
            }
        </tbody>
    </table>
}
