@model FrontEndHousehold.Models.ViewModel.CreateHouseholdViewModel

@{
    ViewBag.Title = "CreateHousehold";
}

<h2 style="margin-top:15px">Create Household</h2>

<form action="@Url.Action("CreateHousehold", "Household")" method="post" enctype="multipart/form-data" style="margin-top:50px">

    @Html.ValidationSummary(false)
    <div class="form-group">
        @Html.LabelFor(p => p.Name, "Name")
        @Html.TextBoxFor(p => p.Name, new { @class = "form-control", placeholder = "Name" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Description, "Description")
        @Html.TextAreaFor(p => p.Description, new { @class = "form-control", placeholder = "Description", rows = 5, columns = 5 })
        
        <div class="">
            <button type="submit" class="btn btn-default">Create</button>
        </div>
    </div>
</form>