<table id="sample-datatables" class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Date Created</th>
            <th>Date Updated</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var house in Model)
        {
            <tr>
                <td>@house.Name</td>
                <td>@house.Description</td>
                <td>@house.DateCreated</td>
                <td>@house.DateUpdated</td>
                <td>
                    <a href="@Url.Action("EditHousehold", "Household", new { id = house.HouseholdId})">
                        <i title="Edit Household" class="fas fa-edit"></i>
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("ViewUsers", "Household", new { id = house.HouseholdId })">
                        <i title="View Members" class="fas fa-user-friends"></i>
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("InviteUsers", "Household", new { id = house.HouseholdId})">
                        <i title="Invite Users" class="fas fa-user-tag"></i>
                    </a>
                </td>
                <td>
                    <form method="post" action="@Url.Action("LeaveHousehold", "Household", new { id = house.HouseholdId })">
                        <button class="btn-delete fas fa-remove">Leave</button>
                    </form>
                </td>
                <td>
                    <form method="post" action="@Url.Action("Join", "Household", new { id = house.HouseholdId })">
                        <button class="btn-delete">Join</button>
                    </form>
                </td>
            </tr>

        }
    </tbody>
</table>